@using OpenRpg.Genres.Fantasy.Characters

<CardSection>
    <div class="container">
        @if (Character != null)
        {
            <CharacterDetails Name="@Character.NameLocaleId" RaceTemplate="@Character.Race" Class="@Character.Class" />
            <br/>
            <CharacterVitals Stats="@Character.Stats" />
            <br/>
            <CharacterStats Stats="@Character.Stats" />
            <br/>
            <div class="columns">
                <div class="column has-text-centered">
                    <h4 class="subtitle mb-2 has-text-dark has-text-centered">Race Effects</h4>
                    <EffectList Effects="@Character.Race.Effects.ToArray()" />
                </div>
                <div class="column has-text-centered">
                    <h4 class="subtitle mb-2 has-text-dark">Class Effects</h4>
                    <EffectList Effects="@Character.Class.ClassTemplate.Effects.ToArray()" />
                </div>
            </div>
        }
    </div>
</CardSection>

@code {
    [Parameter]
    public ICharacter Character { get; set; }
}