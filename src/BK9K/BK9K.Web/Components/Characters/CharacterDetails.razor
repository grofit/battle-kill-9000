@using OpenRpg.Genres.Fantasy.Characters
@using OpenRpg.Core.Races
@using OpenRpg.Core.Classes

<div class="has-text-centered">
    <h2 class="title has-text-dark">@(Name ?? "Unnamed Person")</h2>
    @if(@Class != null)
    {
    <h3 class="subtitle has-text-dark">@($"Level {Class?.Level.ToString() ?? "1"} {RaceTemplate?.NameLocaleId ?? "Unknown Race"} {Class?.ClassTemplate?.NameLocaleId ?? "Unknown Class"}")</h3>
    }
    @if(@Classes != null)
    {
        <h3 class="subtitle has-text-dark">@($"{RaceTemplate?.NameLocaleId ?? "Unknown Race"}")</h3>
        <div class="columns">
        @foreach (var _class in @Classes)
         {
             <div class="column">
                 <TagLabel Label="@($"Level {_class?.Level.ToString() ?? "1"}")" Content="@($"{_class?.ClassTemplate?.NameLocaleId ?? "Unknown Class"}")" Centered="true"></TagLabel>
             </div>
         }
        </div>

    }
</div>

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public IRaceTemplate RaceTemplate { get; set; }
    [Parameter] public IClass Class { get; set; }
    [Parameter] public IEnumerable<IClass> Classes { get; set; }
}